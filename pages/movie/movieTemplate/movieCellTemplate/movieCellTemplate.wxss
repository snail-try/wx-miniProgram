@import "/template/starsTemplate/starsTemplate.wxss";

.movie-cell-template-container {
  width: 230rpx;
  display: flex;
  flex-direction: column;
}

.movie-cell-template-container image {
  width: 100%;
  height: 326rpx;
}

.movie-cell-template-container .title {
  text-align: center;
  margin: 10px auto 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  color:#666;
}

.movie-cell-template-container .none-evaluate{
  text-align: center;
  font-size:28rpx;
  color:#999;
}

.movie-cell-template-container .stars-container{
  padding:0px 8px;
}
